@model PollCapstone.Models.PickOnePoll

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PickOnePoll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PickOneId" />
            <div class="form-group">
                <label asp-for="PollName" class="control-label"></label>
                <input asp-for="PollName" class="form-control" />
                <span asp-validation-for="PollName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfChoices" class="control-label"></label>
                <input asp-for="NumberOfChoices" class="form-control" />
                <span asp-validation-for="NumberOfChoices" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPublic" /> @Html.DisplayNameFor(model => model.IsPublic)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
